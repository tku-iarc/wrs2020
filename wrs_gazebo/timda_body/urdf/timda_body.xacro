<?xml version="1.0"?>

<robot
  name="timda_body"
  xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:include filename="$(find timda_body)/urdf/timda_body.gazebo.xacro" />

  <link
    name="base_link">
    <inertial>
      <origin
        xyz="0.0 0 0"
        rpy="0 0 0" />
      <mass
        value="2.072" />
      <inertia
        ixx="1"
        ixy="0"
        ixz="0"
        iyy="1"
        iyz="0"
        izz="1" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://timda_body/meshes/base_link.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://timda_body/meshes/base_link.STL" />
      </geometry>
    </collision>
  </link>
  <link
    name="slide_right">
    <inertial>
      <origin
        xyz="1.5718E-05 -0.006626 2.4586E-06"
        rpy="0 0 0" />
      <mass
        value="0.24709" />
      <inertia
        ixx="1"
        ixy="0"
        ixz="0"
        iyy="1"
        iyz="0"
        izz="1" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://timda_body/meshes/slide_right.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.89804 0.91765 0.92941 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://timda_body/meshes/slide_right.STL" />
      </geometry>
    </collision>
  </link>
  <joint
    name="joint_right"
    type="prismatic">
    <origin
      xyz="-0.2 0.0765 1.1815"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="slide_right" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-0.8"
      upper="0"
      effort="9000"
      velocity="6.5" />
    <dynamics damping="7"/>
  </joint>
  <link
    name="slide_left">
    <inertial>
      <origin
        xyz="-1.5722E-05 0.006626 2.4586E-06"
        rpy="0 0 0" />
      <mass
        value="0.24709" />
      <inertia
        ixx="1"
        ixy="0"
        ixz="0"
        iyy="1"
        iyz="0"
        izz="1" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://timda_body/meshes/slide_right.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.89804 0.91765 0.92941 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://timda_body/meshes/slide_right.STL" />
      </geometry>
    </collision>
  </link>
  <joint
    name="joint_left"
    type="prismatic">
    <origin
      xyz="-0.2 -0.0765 1.1815"
      rpy="0 0 3.1416" />
    <parent
      link="base_link" />
    <child
      link="slide_left" />
    <axis
      xyz="0 0 1" />
    <limit
      lower="-0.8"
      upper="0"
      effort="9000"
      velocity="6.5" />
    <dynamics damping="7"/>
  </joint>

  <transmission name="slide_tran_r">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint_right">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="slide_motor_r">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="slide_tran_l">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="joint_left">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="slide_motor_l">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

</robot>
